
.topMsg{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 40rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	height: 223rpx;
	color: #fff;
	font-size: 28rpx;
}
.topMsg .logo{
	position: relative;
	width: 20%;
	height: 0;
	padding-bottom: 20%;
	-webkit-border-radius: 16rpx;
	        border-radius: 16rpx;
	overflow: hidden;
}
.topMsg .logo .headlogo{
	position:  absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
.topMsg .detile{
	width: 80%;
	padding-left: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.topMsg .detile .list{
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	white-space: nowrap;
	margin-top: 10rpx;
}
.topMsg .detile .names{
	margin-top: 0;
}
.content{
	height: 100%;
}
.main{
	height: 100%;
	overflow: hidden;
	border-top: 1px solid #FFFFFF;
}
.scroll-Y{
	width: 25%;
	position: absolute;
	top: 223rpx;
	bottom: 0;
	background-color: #f5f5f5;
	left: 0;
}
.scroll-Y .scroll-view-item{
	text-align: center;
	padding: 30rpx 0;
	font-size: 28rpx;
}
.scroll-Y .scroll-view-item.active{
	background-color: #FFFFFF;
	color: #ca0c16;
	position: relative;
}
.scroll-Y .scroll-view-item.active::before{
	content: '';
	position: absolute;
	border-right: 2px solid #ca0c16;
	height: 30rpx;
	left: 10rpx;
	top: 34rpx;
}
.scroll-Y .listTitle{
	padding: 20rpx 0;
	font-size: 30rpx;
	border-top: 1px solid #FFFFFF;
}
.scroll-Y-R{
	width: 75%;
	position: absolute;
	top: 223rpx;
	bottom: 0;
	right: 0;
	background-color: #FFFFFF;
}
.scroll-Y-R .rightList{
	font-size: 28rpx;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border-bottom: 1rpx solid #f5f5f5;
}
.scroll-Y-R .rightList .tipImg{
	width: 25%;
	height: 0;
	padding-bottom: 25%;
	position: relative;
}
.scroll-Y-R .rightList .tipImg .imgs{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}
.scroll-Y-R .rightList .msg{
	width: 55%;
	padding-left: 16rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.scroll-Y-R .rightList .msg .small{
	font-size: 24rpx;
	color: #555555;
}
.scroll-Y-R .rightList .add{
	width: 20%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-flex-wrap: nowrap;
	    -ms-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	-webkit-box-align:end;
	-webkit-align-items:flex-end;
	    -ms-flex-align:end;
	        align-items:flex-end;
}
.scroll-Y-R .rightList .add input{
	height: 43rpx!important;
	min-height: 43rpx;
	font-size: 24rpx;
	text-align: center;
}
.scroll-Y-R .rightList .add .uni-icon{
	font-size: 36rpx!important;
}

